<%= render 'shared/header', title: 'Providers' %>

<div class="container">
  <h1 class="page-title">Providers</h1>

  <%= link_to 'New Provider', new_provider_path, class: 'btn btn-primary btn-sm' %>

  <table class="table table-striped mt-4">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Primary Contact</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @providers.each do |provider| %>
        <tr>
          <td><%= provider.name %></td>
          <td><%= provider.email %></td>
          <td><%= provider.phone_number %></td>
          <td><%= provider.primary_contact %></td>
          <td>
            <%= link_to 'Show', provider, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_provider_path(provider), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render 'shared/footer' %>
